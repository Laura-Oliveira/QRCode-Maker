<?xml version="1.0" encoding="utf-8"?>

    <resources>
       <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
        </style>

        <style name="Logo" parent="Widget.AppCompat.ImageButton">
            <item name="android:layout_width">70dp</item>
            <item name="android:layout_height">70dp</item>
            <item name="android:layout_gravity">center_horizontal</item>
            <item name="android:layout_marginTop">100dp</item>
            <item name="layout_constraintHorizontal_bias">0.5</item>
        </style>

    <style name="text" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor"> #262B8C </item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">13sp</item>
        <item name="layout_constraintVertical_bias">0.15</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

        <style name="TextViewTitle" parent="Widget.MaterialComponents.TextView">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_gravity">center_horizontal</item>
            <item name="textAllCaps">true</item>
            <item name="android:textSize">16sp</item>
            <item name="layout_constraintVertical_bias">0.15</item>
            <item name="fontFamily">sans-serif-black</item>
           <item name="android:textColorPrimary"> #FF3700B3 </item>

        </style>

        <style name="Button" parent="Widget.MaterialComponents.Button">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">70dp</item>
            <item name="backgroundTint">@color/colorPrimaryDark</item>
            <item name="textAllCaps"> true </item>
            <item name="textAppearanceButton">@color/white</item>
            <item name="android:textSize">15sp</item>
            <item name="fontFamily">sans-serif-black</item>
        </style>
    </resources>


